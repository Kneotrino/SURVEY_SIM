<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainTheme"
    android:orientation="vertical"
    tools:context=".SurveyActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Beritahu kami seberapa puas anda dengan pelayanan kami "
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pilih4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@mipmap/but_sap_icon"
            android:text="Sangat AMAT PUAS"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/pilih3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@mipmap/but_sp_icon"
            android:text="@string/pilih4"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/pilih2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@mipmap/but_tp_icon"
            android:text="Tidak Puas"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/pilih1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@mipmap/but_stp_icon"
            android:text="Sangat Tidak Puas"
            android:textColor="@android:color/white"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="137dp" />

    </LinearLayout>

    <Button
        android:id="@+id/pilihKeluar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/pilihKeluar"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="251dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_vertical|center_horizontal|center"
        app:srcCompat="@drawable/logo" />


</LinearLayout>